{
  "manifest_version": 3,
  "name": "Auto Close Blocker",
  "short_name": "Auto Blocker",
  "version": "1.0.0",
  "version_name": "1.0.0",
  "description": "Automatically closes unwanted new tabs on selected websites",
  "homepage_url": "https://github.com/filip65/ad-popup-blocker",
  "minimum_chrome_version": "88",
  "browser_specific_settings": {
    "gecko": {
      "id": "auto-close-blocker@filipkatusin.com",
      "strict_min_version": "109.0"
    }
  },
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle Tab Blocker",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon_16.png",
      "32": "icons/icon_32.png"
    }
  },
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  }
}
